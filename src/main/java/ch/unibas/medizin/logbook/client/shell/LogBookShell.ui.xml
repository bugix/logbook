<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:ch.unibas.medizin.logbook.client.ui">
	<ui:style>
	.northPanelStyle {
		background-image: url("logbook/images/bg-header.jpg");
		width: 100%;
		height: 110px;
		position: absolute;
		top: 0;
	}
	
	.logBookLogo {
		position: absolute;
		right: 22%;
		z-index: 889;
	}
	
	.eastPanelStyle {
		background-color: #EEEEEE;
	}
	
	.centerpanelStyle {
		top: 10px;
		margin: auto;
		position: relative !important;
	}
	
	.scroll {
		overflow: auto;
	}
	
	.scrollFp {
		overflow: auto;
		background-color: #EEEEEE;
	}
	</ui:style>

	<g:FocusPanel ui:field="fpMain" addStyleNames="{style.scrollFp}">
		<g:DockLayoutPanel unit='PX' ui:field="masterDockPanel"
			addStyleNames="{style.eastPanelStyle}">
			<g:north size='110'>
				<g:HTMLPanel>
					<g:Image ui:field="imgLogBookLogo" url="logbook/images/logo.png" addStyleNames="{style.logBookLogo}"></g:Image>
					<g:SimplePanel ui:field="topPanel" addStyleNames="{style.northPanelStyle}"></g:SimplePanel>
				</g:HTMLPanel>
			</g:north>
			<g:south size='0'>
				<g:HTMLPanel>
					<g:SimplePanel ui:field="topPanel4" addStyleNames="{style.eastPanelStyle}"></g:SimplePanel>
				</g:HTMLPanel>
			</g:south>
			<g:center>
				<g:SimplePanel ui:field="logBookNavSimplePanel" addStyleNames="{style.centerpanelStyle}"></g:SimplePanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:FocusPanel>
</ui:UiBinder> 
