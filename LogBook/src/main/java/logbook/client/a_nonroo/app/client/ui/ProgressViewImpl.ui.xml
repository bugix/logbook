<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:a="urn:import:logbook.client.a_nonroo.app.client.ui.custom.widget">
	<ui:style>
		.progressTablePanelStyle {
			border-style: solid;
			border-width: 1px;
			border-radius: 5px;
			border-color: lightblue;
			width: 100%;
		}
		
		.progresstable-style {
			border: 1px solid black;
		}
	</ui:style>
		
		<g:HTMLPanel addStyleNames="{style.progressTablePanelStyle}">
			<table>
				<tbody>
					<tr>
						<g:ScrollPanel width="100%" height="100%">
						<g:VerticalPanel width="100%" height="100%"> 
							<g:FlexTable ui:field="progressFlexTable" addStyleNames="style.progresstable-style" width="100%"></g:FlexTable>
							<a:CustomPager ui:field="pager"></a:CustomPager>
						</g:VerticalPanel>
						</g:ScrollPanel>
					</tr>
				</tbody>
			</table>
		</g:HTMLPanel>

</ui:UiBinder> 