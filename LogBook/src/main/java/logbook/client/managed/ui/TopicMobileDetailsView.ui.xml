<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style>
    .outer {
      padding: 10px;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding: 4px 0px 15px 15px;
    }
  </ui:style>

  <g:HTMLPanel debugId="boundElementHolder" styleName="{style.outer}">
    <div id="id">
            <div class="{style.label}">Id</div>
            <div class="{style.value}" ui:field="id"/>
        </div>
    <div id="topicDescription">
            <div class="{style.label}">Topic Description</div>
            <div class="{style.value}" ui:field="topicDescription"/>
        </div>
    <div id="skills">
            <div class="{style.label}">Skills</div>
            <div class="{style.value}" ui:field="skills"/>
        </div>
    <div id="classificationTopic">
            <div class="{style.label}">Classification Topic</div>
            <div class="{style.value}" ui:field="classificationTopic"/>
        </div>
    <div id="version">
            <div class="{style.label}">Version</div>
            <div class="{style.value}" ui:field="version"/>
        </div>

    <g:Button ui:field="delete">Delete</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
