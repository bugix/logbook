<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:logbook.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:logbook.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit Student</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New Student</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      <tr id="studentId">
                <td>
                    <div class="{style.label}">Student Id:</div>
                </td>
                <td>
                    <g:TextBox ui:field="studentId"/>
                </td>
            </tr>
      <tr id="shib_id">
                <td>
                    <div class="{style.label}">Shib_id:</div>
                </td>
                <td>
                    <g:TextBox ui:field="shib_id"/>
                </td>
            </tr>
      <tr id="email">
                <td>
                    <div class="{style.label}">Email:</div>
                </td>
                <td>
                    <g:TextBox ui:field="email"/>
                </td>
            </tr>
      <tr id="gender">
                <td>
                    <div class="{style.label}">Gender:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="gender"/>
                </td>
            </tr>
      <tr id="name">
                <td>
                    <div class="{style.label}">Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="name"/>
                </td>
            </tr>
      <tr id="preName">
                <td>
                    <div class="{style.label}">Pre Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="preName"/>
                </td>
            </tr>
      <tr id="studentStatus">
                <td>
                    <div class="{style.label}">Student Status:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="studentStatus"/>
                </td>
            </tr>
      <tr id="studyYear">
                <td>
                    <div class="{style.label}">Study Year:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="studyYear"/>
                </td>
            </tr>
      <tr id="skillAcquired">
                <td>
                    <div class="{style.label}">Skill Acquired:</div>
                </td>
                <td>
                    <a:SkillAcquiredSetEditor ui:field="skillAcquired"/>
                </td>
            </tr>
    </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
